    <div id="trackname" class="marquee">
        <div class="marquee-text">
            <div>{{{ tracklist }}}</div>
            <div>{{{ tracklist }}}</div>
        </div>
    </div>
    <h1>{{username}}</h1>
    <section class="curr-lists">
        <h2>current tops</h2>
        <div>
            {{> top-list type='artists' ctx=artists }}
            {{> top-list type='tracks' ctx=tracks }}
        </div>
    </section>
    <section id="#chart">
        <h2>chart</h2>
        {{> chart-form ctx=form }}
        <section class="chartarea">
            {{{chart}}}
        </section>
    </section>
</section>
<script> 
    let scroll_point = "{{scroll_to}}"; 
    if (scroll_point != undefined && scroll_point != '') {
        document.getElementById(scroll_point).scrollIntoView(true);
    }
</script>
